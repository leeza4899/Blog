<%- include("partials/header")%>

<div class = "ui main text container segment">
	<div class = "ui huge header">
		New Blog Post
		<form classa = "ui form" action="/blogs" method="POST">
			<div class = "field">
				<label>Title: </label>
				<br>
				<input type = "text" name = "blog[title]" placeholder= "Title">
				<br>
			</div>
			<div class = "field">
				<label>Image: </label>
				<br>
				<input type = "text" name = "blog[image]" placeholder= "Image">
				<br>
			</div>
			<div class = "field">
				<label>Blog Content: </label>
				<br>
				<textarea name = "blog[body]" placeholder= "Blog post goes here"></textarea>
				<br>
			</div>
			<div class = "field">
				<br>
				<button class = "ui black big basic button">Submit</button>
			</div>
		</form>
	</div>
</div>

